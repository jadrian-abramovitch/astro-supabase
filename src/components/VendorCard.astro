---
interface Props {
  vendor: {
    id: string | number;
    name: string;
    image: string;
    rating: number;
    services: string;
  }
}

const { vendor } = Astro.props;
---

<a 
  href={`/vendor/${vendor.id}`}
  class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105 hover:shadow-lg"
>
  <img src={vendor.image} alt={`${vendor.name} profile`} class="w-full h-48 object-cover"/>
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2">{vendor.name}</h3>
    <div class="flex items-center mb-2">
      <span class="text-yellow-400">{"★".repeat(Math.floor(vendor.rating)) + "☆".repeat(5-Math.floor(vendor.rating))}</span>
      <span class="ml-2">{vendor.rating}</span>
    </div>
    <div class="space-y-2">
      <p class="text-gray-600">Services:</p>
      <div class="flex flex-wrap gap-2">
          <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{vendor.services}</span>
      </div>
    </div>
  </div>
</a>
